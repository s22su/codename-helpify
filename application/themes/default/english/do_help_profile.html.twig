{% extends "_layouts/main_layout.html.twig" %}

{% block content %}
    <h1>{{user.name}}</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            {% if user.hobbies %}
                <h2>Hobbies</h2>
                <div class="row">
                    <div class="col-md-8">
                        <p>{{ user.hobbies }}</p>
                    </div>
                </div>
                <hr />
            {% endif %}
            {% if user.experience %}
                <h2>Experience</h2>
                <div class="row">
                    <div class="col-md-8">
                        <p>{{ user.experience }}</p>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="col-md-4">
            <img src="{{profile_image}}" alt="Profile image of {{user.name}}" />
        </div>
    </div>
    <hr />
    <hr />
{% endblock %}