{% extends "_layouts/main_layout.html.twig" %}

{% block content %}

<div class="row">
  <form class="form-horizontal" role="form" name="need_help">

    <div class="form-group">
      <label for="category" class="col-sm-2 control-label">Category:</label>
      <div class="col-sm-5">
        <select class="form-control" name="category">
          <option>Kultuuriürituse külastamine, change</option>
          <option>Majapidamistööd, change</option>
        </select>
      </div>
    </div>

    <div class="form-group">
      <label for="city" class="col-sm-2 control-label">City:</label>
      <div class="col-sm-5">
        <select class="form-control" name="city">
          <option>Tallinn</option>
          <option>Tartu</option>
          <option>Rakvere</option>
        </select>
      </div>
    </div>

    <div class="form-group">
      <label for="address" class="col-sm-2 control-label">Address:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" placeholder="Insert your location">
      </div>
    </div>

    <div class="form-group">
      <label for="date" class="col-sm-2 control-label">Date:</label>
        <div class=" col-sm-5">
          <div class="input-group date" id="datetimepicker">
            <input type="text" class="form-control" name="date" />
            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
          </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary btn-lg">Send</button>
      </div>
    </div>
  </form>
</div>

{% endblock %}
