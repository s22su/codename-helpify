{% extends "_layouts/main_layout.html.twig" %}

{% block header_picture %}
    <div class="alerts container">
        <div class="alert-info">
            <p>Thank you for visiting us! This here is the demo version of Helpific platform that was greated during Garage48 Enable Tallinn in the end of November 2014. The real working Helpific platform will soon be ready too, stay tuned!</p>

            <p>Until then you can follow us on <a href="https://www.facebook.com/Helpific">Facebook Helpific</a>.</p>
        </div>
    </div>

    <div class="header_picture">

    <div class="modal fade" id="videoModal" tabindex="-1" role="dialog" aria-labelledby="videoModal" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <div>
              <iframe width="560" height="315" src="//www.youtube.com/embed/nLEv2P4FEbU" frameborder="0" allowfullscreen></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>


        <div class="headline centered">
          <h1>Helpific connects volunteers to those who need help with everyday activities</h1><br>
          <h2>It's never been easier to give and get help</h2>
          <a href="#" data-toggle="modal" data-target="#videoModal" data-theVideo="http://www.youtube.com/embed/loFtozxZG0s">

            <img src="{{base_url}}/assets/images/playbutton.png" class="img-responsive centered-margin m40top">

            <h2 class="m20top">Watch video</h2>

          </a>

        </div>
    </div>
{% endblock %}

{% block front_doors %}

    <div class="front-doors">

        <img src="{{base_url}}/assets/images/the_key.png" class="img-responsive keyImage">

        <div class="left">

            <div class="inner-content">

                <a href="#" class="btn">MEET THE VOLUNTEERS</a>

                <p>
                    <span class="first-line">State your <strong>NEED</strong></span><br>
                    <span class="second-line">so you can see the deed</span>
                    </span>
                </p>

                <div class="ondoorimage hidden-xs hidden-sm"><img src="{{base_url}}/assets/images/vasak.png" class="img-responsive m40top"></div>

                <img src="{{base_url}}/assets/images/door-left.png" class="img-responsive m40top">

            </div>

        </div>
        <div class="right">
            <div class="inner-content">

                <a href="#" class="btn">HELP THOSE IN NEED</a>

                <p>
                    <span class="first-line">Be a <strong>HERO</strong></span><br>
                    <span class="second-line">in your communiy</span>
                </p>

                <div class="ondoorimage hidden-xs hidden-sm"><img src="{{base_url}}/assets/images/parem.png" class="img-responsive m40top"></div>

                <img src="{{base_url}}/assets/images/door-right.png" class="img-responsive m40top">

            </div>

        </div>
    </div>

{% endblock %}


{% block content %}

    <br><br><br><br><br><br>
    <h1 class="centered gray">HOW HELPIFIC WORKS</h1>

    <img src="{{base_url}}/assets/images/how-it-works.png" class="img-responsive m40top centered-margin">

{% endblock %}
